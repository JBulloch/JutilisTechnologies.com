<!-- Go Derby -->
        <div class="group relative overflow-hidden rounded-2xl bg-gray-900 p-8 hover:shadow-2xl transition-all duration-300">
          <div class="flex items-start justify-between mb-6">
            <div class="flex items-center gap-4">
              <div class="flex h-16 w-16 items-center justify-center rounded-xl bg-emerald-500 shadow-lg flex-shrink-0">
                <svg
                  class="h-9 w-9 text-white"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
